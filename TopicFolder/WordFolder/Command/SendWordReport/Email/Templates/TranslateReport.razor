@using lexicana.TopicFolder.WordFolder.Command.SendWordReport.Email.Models
<!DOCTYPE html>
<html>
<head>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
    <style>
        .card-container {
            font-family: 'Montserrat', sans-serif;
            max-width: 400px;
            width: 400px;
            min-width: 400px;
            margin: 0 auto;
            border-radius: 20px;
            padding: 40px 20px;
            text-align: center;
            position: relative;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
            background: linear-gradient(135deg, #6B46C1 0%, #5E2BA7 100%);
        }
        .word-main {
            font-size: 55px;
            font-weight: 700;
            color: #ffffff;
            margin: 40px 0 40px 0;
            letter-spacing: 1px;
        }
        .divider {
            width: 100%;
            height: 3px;
            background-color: rgba(255, 255, 255, 0.3);
            margin: 20px 0;
        }
        .word-translation {
            font-size: 35px;
            font-weight: 400;
            color: #ffffff;
            margin: 40px 0;
        }
        .reference-link {
            font-size: 16px;
            color: #ffffff;
            margin-top: 50px;
        }
        .reference-link a {
            color: #ffffff;
            text-decoration: underline;
        }
    </style>
</head>
<body>
<div class="card-container">
    <div class="word-main">@Model.Word</div>
    <div class="divider"></div>
    <div class="word-translation">@Model.Translation</div>
    <div class="reference-link">
        See full definition on <a href="https://wordreference.com/es/en/translation.asp?spen=@Model.Word" style="color: #ffffff; border-bottom-color: #5E2BA7;">wordreference.com</a>
    </div>
</div>
</body>
</html>

@code
{
    [Parameter] public WordCardModel Model { get; set; }
}